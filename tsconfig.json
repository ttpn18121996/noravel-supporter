{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "incremental": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
